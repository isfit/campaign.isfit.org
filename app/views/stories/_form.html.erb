<div class='row'>
	<div class='col-md-8 text-center col-md-offset-2'>
		<h1>Create your own story</h1>
		<p>
			Tell us your corruption story! Where and how did the situation occur, and what did you learn from it?
		</p>
	</div>
</div>
<div class='row'>
	<div class='col-md-8 text-center col-md-offset-2'>
		<%= bootstrap_form_for(@story, url: story_create_path) do |f| %>
			<%= f.text_field :title, class: "required" %>
			<%= f.text_area :story, class: "required" %>
			<%= f.select :continent_id, Continent.continents_collected,:include_blank => '<Select continent>', class: "required"  %>
			<%= f.select :happened_in_id, Country.countries_collected, :include_blank => '<Select country>', class: "required"   %>
			<%= f.text_field :author %>
			<%= f.select :author_nationality_id, Country.countries_collected, :include_blank => '<Select nationality>' %>
			<%= f.email_field :email %>
			<br>
			<br>
			<%= f.submit %>
		<% end %>
		


	</div>
</div>