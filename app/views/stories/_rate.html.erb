<%= bootstrap_form_for(@score, url: rate_story_path(@story)) do |f| %>

	<%= f.form_group :value, help: "Rate how corrupt you think the action in the story is, where left is less corrupt and right is more corrupt." do %>
	  <%= f.radio_button :value, 0, label: "Not corrupt", inline: true %>
	  <%= f.radio_button :value, 1, label: "A little corrupt", inline: true %>
	  <%= f.radio_button :value, 2, label: "Corrupt", checked: true, inline: true %>
	  <%= f.radio_button :value, 3, label: "Very corrupt", inline: true %>
	  <%= f.radio_button :value, 4, label: "Extremely corrupt", inline: true %>
	<% end %>
  <%= f.submit("Rate story") %>
<% end %>