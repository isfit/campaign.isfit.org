<div class="stories">
  <div class="row">
    <div class="col-md-8">
      <h1><%= @story.title %> </h1>
      <div class="story-text">
        <%= @story.story  %>
        <% if !@story.author_nationality.eql?(0) %>
          <%= @story.author_nationality.name %>
        <% end %>
      </div>
      <% if !@has_rated %>
        <%= render "rate" %>
      <% else %>

        <div class="progress">
          <div class="progress-bar progress-bar-danger" role="progressbar" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100" style="width: <%= @story.percent %>%">
          </div>
        </div>
      <% end %>


     </div>
     <div class="col-md-4 text-center">
      <h2>
        <%= @story.happened_in.name %>
      </h2>

     </div>
  </div>
  <div class="row">
    <div class="col-md-4 col-md-offset-8 story-text">
            <h4>
            <%= link_to "Read more stories from "+@story.continent.name, controller: "continents", action: "show", id: @story.continent %>
          </h4>
    </div>
  </div>


  <%= render "disqus" %>
</div>
