  <meta property="og:image" content="<%= image_url("logo_handbook.png") %>" >
  
  <%= favicon_link_tag 'favicon.ico' %>
  <title>Corruption Handbook</title>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
