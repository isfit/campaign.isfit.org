<div class='row'>
	<div class='col-md-8 text-center text-primary col-md-offset-2'>
		<h1>Velkommen!</h1>
	</div>
</div>
<div class='row'>
	<div class='col-md-8 text-center col-md-offset-2'>
		<%= form_for :story, url: story_create_path do |f| %>
			<p>

				<%= f.label :happened_in %><br>
				<%= f.select :happened_in, Country.countries_collected %><br> 

				<!-- Dropdown -->

				<%= f.label :story %><br>
				<%= f.text_area :story %><br>

				<%= f.label :author %><br>
				<%= f.text_field :author %><br>

				<%= f.label :author_nationality %><br>
				<%= f.select :author_nationality, Country.countries_collected %><br> <!-- Dropdown -->

				<%= f.label :email %><br>
				<%= f.text_field :email %><br>

				<%= f.submit %>
			</p>
		<% end %>
	</div>
</div>