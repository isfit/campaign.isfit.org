<div class="row">
	<div class="col-md-8 col-md-offset-2 text-center text-primary">
		<strong>Kontinent:</strong>
		<%= @continent.name %>
	</div>
</div>

<%= render 'form' %>

<div class="row">
	<div class"col-md-8 col-md-offset-2 text-center text-primary">
		<% @stories.each do |story| %>
			<%= render 'story', story: story %>
		<% end %>
		<div class="text-center">
			<%= will_paginate @stories, renderer: BootstrapPagination::Rails, :page_links => false %>
		</div>
	</div>
</div>

