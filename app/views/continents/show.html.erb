<div class="row">
	<div class="text-primary">
		<strong>Kontinent:</strong>
		<%= @continent.name %>
	</div>
</div>



<div class="row">
	<div class="col-md-7">
		<button type="button" class="btn btn-link"><%= link_to "ASC", continent_path(@continent.id, sort: "ASC") %></button>
		<button type="button" class="btn btn-link"><%= link_to "DESC", continent_path(@continent.id, sort: "DESC") %></button>
		<button type="button" class="btn btn-link">Link</button>
		<button type="button" class="btn btn-link">Link</button>
		<% @stories.each do |story| %>
			<%= render 'story', story: story %>
		<% end %>

		<%= will_paginate @stories, renderer: BootstrapPagination::Rails, :page_links => false %>

		
	</div>
	<div class="col-md-4 col-md-offset-1 text-right">
		<%= @continent.name %><br>
		<%= link_to 'Create your own', controller: 'stories', action: 'new' %>

		<%= link_to "Back", controller: "continents" %>
	</div>
</div>


