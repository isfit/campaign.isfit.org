
<div class="row">
	<div class="col-md-7">
		<button type="button" class="btn btn-link"><%= link_to "Oldest first", continent_path(@continent.id, sort: "ASC") %></button>
		<button type="button" class="btn btn-link"><%= link_to "Newest first", continent_path(@continent.id, sort: "DESC") %></button>
		<button type="button" class="btn btn-link"><%= link_to "Highest rated", continent_path(@continent.id, sort: "HIGH") %></button>
		<button type="button" class="btn btn-link"><%= link_to "Lowest rated", continent_path(@continent.id, sort: "LOW") %></button>
		<% @stories.each do |story| %>
			<%= render 'story', story: story %>
		<% end %>

		<%= will_paginate @stories, renderer: BootstrapPagination::Rails, :page_links => false %>

		
	</div>
	<div class="col-md-4 col-md-offset-1 text-right">
		
		<h1><%= @continent.name.capitalize %></h1>
		<h1><%= link_to 'Create your own', controller: 'stories', action: 'new' %></h1>

		<h2><%= link_to "Back", controller: "continents" %></h2>
	</div>
</div>


