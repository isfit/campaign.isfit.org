<div class="stories">
  <div class="row">
    <div class="col-md-8">
      <h1><%= @story.title %> </h1>
      <div class="story-text">
        <%= @story.story  %>
        <p>
        <% if !@story.author_nationality.eql?(0) %>
          <h5>Author nationality: <%= @story.author_nationality.name %></h5>
        <% end %>
        </p>
      </div>
      <% if !@has_rated %>
        <%= render "rate" %>
      <% else %>
        <%= render "show_rating" %>
      <% end %>


     </div>
     <div class="col-md-4 text-center">
      <h2>
        <%= @story.happened_in.name %>
      </h2>

     </div>
  </div>
  <div class="row">
    <div class="col-md-4 col-md-offset-8 story-text">
            <h4>
            <%= link_to "Read more stories from "+@story.continent.name, controller: "continents", action: "show", id: @story.continent %>
          </h4>
    </div>
  </div>


  <%= render "disqus" %>
</div>
