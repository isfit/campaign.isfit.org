<div class="blog-post">

	<h3><%= link_to story.title, story %></h3><h4><%= story.happened_in.name %></h4><br>
	<%= truncate(story.story, length: 200, omission: "...") %>
	<br>
	<br>
	<div class="row">
		<div class="col-md-2">
			<%= link_to "Read more", story, class: "btn btn-default btn-xs" %>
		</div>
		<div class="col-md-6 col-md-offset-4">
			<div class="progress" >
		  	<div class="progress-bar progress-bar-danger" title="" data-content="content here" data-placement="bottom" data-toggle="popover" data-original-title="title here" role="progressbar" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100" style="width: <%= story.percent %>%" >
		  	</div>
			</div>
			<button id="test" type="button" class="btn btn-default" data-placement="top" title="Tooltip on top">Tooltip on top</button>
			<a href="#" class="link" data-original-title="first tooltip">Hover me for a tooltip</a>
		</div>
	</div>
	<hr>

</div>
